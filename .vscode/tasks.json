{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: make build",
            "command": "time",
            "args": [
                "make",
                "-j16",
                "-f",
                "${workspaceFolder}/build/mingw/Makefile"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}